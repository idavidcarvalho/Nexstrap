{
  "name": "nexstrap",
  "version": "1.0.0",
  "description": "Nexstrap - Bootstrap 5 Design System",
  "main": "dist/css/nexstrap.css",
  "scripts": {
    "dev": "npx serve docs",
    "build:css": "npx postcss dist/css/nexstrap.css -o dist/css/nexstrap.min.css --use cssnano",
    "build:js": "npx terser dist/js/nexstrap.js -o dist/js/nexstrap.min.js",
    "build": "npm run build:css && npm run build:js",
    "deploy": "npx gh-pages -d docs"
  },
  "keywords": [
    "bootstrap",
    "design-system",
    "ui-kit",
    "css",
    "frontend"
  ],
  "author": "David Carvalho",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/idavidcarvalho/Nexstrap"
  },
  "devDependencies": {
    "cssnano": "^5.1.0",
    "postcss": "^8.4.0",
    "postcss-cli": "^10.0.0",
    "terser": "^5.0.0",
    "serve": "^14.0.0",
    "gh-pages": "^5.0.0"
  }
}
